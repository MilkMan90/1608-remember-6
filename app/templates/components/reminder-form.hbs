<form class="add-new--form" {{action 'handleSave' reminder on="submit"}}>
 <label>
   Title:
   {{input class="input-title" type="text" value=title}}
 </label>
 <label>
   Date:
   {{input class="input-date" type="date" value=date}}
 </label>
 <label>
   Notes:
   {{input class="input-notes" type="textarea" value=notes}}
 </label>

  {{input class="input-submit" type="submit" value="save"}}

</form>

{{#if edit}}
  <button class="input-revert {{if reminder.hasDirtyAttributes "enabled"}}" {{action 'rollback' reminder on="click"}}>Revert</button>
{{/if}}
